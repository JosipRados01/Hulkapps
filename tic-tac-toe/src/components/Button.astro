---
const {text, action} = Astro.props;
import "../styles/shadow-box.css";

---
<style>
    
.btn {
   align-items: center;
   background-color: #fff;
   border-radius: 12px;
   box-sizing: border-box;
   color: #121212;
   cursor: pointer;
   display: inline-flex;
   flex: 1 1 auto;
   font-family: Inter,sans-serif;
   font-size: 2rem;
   font-weight: 700;
   justify-content: center;
   line-height: 1;
   margin: 10px;
   outline: none;
   padding: 1rem 1.2rem;
   text-align: center;
   text-decoration: none;
   transition: box-shadow .2s,-webkit-box-shadow .2s;
   white-space: nowrap;
   border: 0;
   user-select: none;
   -webkit-user-select: none;
   touch-action: manipulation;
}

.btn:hover {
    box-shadow: #121212 0 0 0 3px, transparent 0 0 0 0;
}


@media only screen and (max-width: 768px) {
    /* CSS rule for small screens */
    .btn {
        font-size: 1.5rem;
    }
}

</style>

<button class="btn shadow-box" role="button" onclick={action}>{text}</button>
