---
import Button from "../components/Button.astro";
import {restart} from "../services/TicTacToeService"
---

<style>
    .buttonsDiv {
    display: flex;
    flex-direction: column;
}
</style>

<div class="buttonsDiv">
    <Button action={()=> {restart()}} text="Restart" ></Button>
    <Button action={()=> {restart(1)}} text="One Player" ></Button>
    <Button action={()=> {restart(2)}} text="Two Players" ></Button>
</div>